<?xml version="1.0" encoding="utf-8"?>
<extension version="3.3" type="plugin" group="media" method="upgrade">
	<name>plg_media_azure</name>
	<author>Joomla! Project</author>
	<creationDate>November 2014</creationDate>
	<copyright>Copyright (C) 2005 - 2014 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>3.0.0</version>
	<description>PLG_MEDIA_AZURE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="azure">azure.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
		<folder>library</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_media_azure.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_media_azure.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">

				<field
					name="azure_enabled"
					type="radio"
					label="PLG_MEDIA_AZURE_FIELD_ENABLED_LABEL"
					description="PLG_MEDIA_AZURE_FIELD_ENABLED_DESC"
					default="0"
					class="radio btn-group">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>

				<field
					name="azure_default_endpoint"
					type="text"
					label="PLG_MEDIA_AZURE_FIELD_DEFAULT_ENDPOINT_LABEL"
					description="PLG_MEDIA_AZURE_FIELD_DEFAULT_ENDPOINT_DESC">
					<option value="http">http</option>
					<option value="https">https</option>
				</field>

				<field
					name="azure_account_name"
					type="text"
					label="PLG_MEDIA_AZURE_FIELD_ACCOUNT_NAME_LABEL"
					description="PLG_MEDIA_AZURE_FIELD_ACCOUNT_NAME_DESC"
					size="100"
					class="disable-me"
				/>

				<field
					name="azure_account_key"
					type="text"
					label="PLG_MEDIA_AZURE_FIELD_ACCOUNT_KEY_LABEL"
					description="PLG_MEDIA_AZURE_FIELD_ACCOUNT_KEY_DESC"
					size="100"
					class="disable-me"
				/>

				<field
					name="azure_cdn_enabled"
					type="radio"
					label="PLG_MEDIA_AZURE_FIELD_CDN_ENABLED_LABEL"
					description="PLG_MEDIA_AZURE_FIELD_CDN_ENABLED_DESC"
					default="0"
					class="radio btn-group">
					<option value="0">Disabled</option>
					<option value="1">Enabled</option>
				</field>

				<field
					name="azure_cdn_url"
					type="url"
					label="PLG_MEDIA_AZURE_FIELD_CDN_URL_LABEL"
					description="PLG_MEDIA_AZURE_FIELD_CDN_URL_DESC"
					class="env_checkbox"
					default=""
				/>

				<field
					name="azure_cdn_https"
					type="radio"
					label="PLG_MEDIA_AZURE_FIELD_CDN_HTTPS_LABEL"
					description="PLG_MEDIA_AZURE_FIELD_CDN_HTTPS_DESC"
					class="radio btn-group">
					<option value="0">Disabled</option>
					<option value="1">Enabled</option>
				</field>

				<field
					name="azure_cdn_query_string"
					type="radio"
					label="PLG_MEDIA_AZURE_FIELD_DEFAULT_ENDPOINT_LABEL"
					description="PLG_MEDIA_AZURE_FIELD_DEFAULT_ENDPOINT_DESC"
					class="radio btn-group">
					<option value="0">Disabled</option>
					<option value="1">Enabled</option>
				</field>

				<field
					name="azure_use_environment_variable"
					type="checkbox"
					label="PLG_MEDIA_AZURE_FIELD_USE_ENVIRONMENT_VARIABLE_KEY_LABEL"
					description="PLG_MEDIA_AZURE_FIELD_USE_ENVIRONMENT_VARIABLE_KEY_DESC"
					class="env_checkbox"
					default="0"
				/>

				<field
					name="azure_cdn_url"
					type="url"
					label="PLG_MEDIA_AZURE_FIELD_CDN_URL_LABEL"
					description="PLG_MEDIA_AZURE_FIELD_CDN_URL_DESC"
					class="env_checkbox"
					default="0"
				/>

			</fieldset>
		</fields>
	</config>
</extension>
